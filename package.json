{
	"name": "dnd-buddy-3.0",
	"version": "1.0.0",
	"description": "a basic dnd character sheet application ",
	"main": "server.js",
	"scripts": {
		"start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
		"start:prod": "node server.js",
		"start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
		"client": "cd client && npm run start",
		"install": "cd client && npm install",
		"build": "cd client && npm run build",
		"heroku-postbuild": "npm run build",
		"seed": "node scripts/seedDB.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/wmwassmann/dnd-buddy-2.0.git"
	},
	"keywords": [
		"dnd",
		"buddy"
	],
	"author": "William Wassmann / Alex M / David Deaton / Karl Behrens / Chung Hei Fuk",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/wmwassmann/dnd-buddy-2.0/issues"
	},
	"homepage": "https://github.com/wmwassmann/dnd-buddy-2.0#readme",
	"dependencies": {
		"bcrypt": "^5.0.0",
		"bcryptjs": "^2.4.3",
		"dotenv": "^8.2.0",
		"ejs": "^3.1.5",
		"express": "^4.17.1",
		"express-flash": "0.0.2",
		"express-handlebars": "^5.1.0",
		"express-session": "^1.17.1",
		"ff": "^0.2.2",
		"fs": "0.0.1-security",
		"git": "^0.1.5",
		"handlebars": "^4.7.6",
		"mysql": "^2.18.1",
		"mysql2": "^2.2.2",
		"nodemon": "^2.0.4",
		"passport": "^0.4.1",
		"passport-local": "^1.0.0",
		"path": "^0.12.7",
		"production": "0.0.2",
		"salesforce-lightning-cli": "^3.0.0",
		"sequelize": "^6.3.5"
	}
}
